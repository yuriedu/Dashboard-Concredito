<script>
  var sidebar = false
  function openSideBar() {
    if (sidebar) {
      sidebar = false
      document.getElementById("sidebar").style.maxWidth = window.screen.width < 900 ? '17vw' : '4.5vw'
      document.getElementById("sidebar").style.width = window.screen.width < 900 ? '17vw' : '4.5vw'
      document.getElementById("iconSideBar").classList.remove('fa-times')
      document.getElementById("iconSideBar").classList.add('fa-bars');
    } else {
      sidebar = true
      document.getElementById("sidebar").style.maxWidth = window.screen.width < 900 ? '60vw' : '20vw'
      document.getElementById("sidebar").style.width = window.screen.width < 900 ? '60vw' : '20vw'
      document.getElementById("iconSideBar").classList.remove('fa-bars')
      document.getElementById("iconSideBar").classList.add('fa-times');
    }
  }
  function changeTheme() {
    if (localStorage.getItem('theme') === 'dark') {
      localStorage.setItem('theme', 'light');
      document.documentElement.className = 'light'
      document.getElementById("logo").src="/images/logo_white.png"
      document.getElementById("logo2").src="/images/logo_white.png"
      document.getElementById("themeButton").classList.remove('fa-lightbulb-slash')
      document.getElementById("themeButton").classList.add('fa-lightbulb-on');
    } else {
      localStorage.setItem('theme', 'dark');
      document.documentElement.className = 'dark'
      document.getElementById("logo").src="/images/logo_black.png"
      document.getElementById("logo2").src="/images/logo_black.png"
      document.getElementById("themeButton").classList.remove('fa-lightbulb-on')
      document.getElementById("themeButton").classList.add('fa-lightbulb-slash');
    }
  }
  (function () {
    if (localStorage.getItem('theme') === 'dark') {
      localStorage.setItem('theme', 'dark');
      document.documentElement.className = 'dark'
      document.getElementById("logo").src="/images/logo_black.png"
      document.getElementById("logo2").src="/images/logo_black.png"
      document.getElementById("themeButton").classList.remove('fa-lightbulb-on')
      document.getElementById("themeButton").classList.add('fa-lightbulb-slash');
    } else {
      localStorage.setItem('theme', 'light');
      document.documentElement.className = 'light'
      document.getElementById("logo").src="/images/logo_white.png"
      document.getElementById("logo2").src="/images/logo_white.png"
      document.getElementById("themeButton").classList.remove('fa-lightbulb-slash')
      document.getElementById("themeButton").classList.add('fa-lightbulb-on');
    }
    if (window.location.pathname.split('/')[1] == "logout") {
      localStorage.setItem('user', '')
      localStorage.setItem('password', '')
      return location.href = `/`
    } else if (window.location.pathname.split('/')[1] == "cadastrar") {
      document.getElementById("sideBarCadastrar").classList.add('navbar-select');
    } else if (window.location.pathname.split('/')[1] == "consultar") {
      document.getElementById("sideBarConsultar").classList.add('navbar-select');
    } else if (window.location.pathname.split('/')[1] == "ajuda") {
      document.getElementById("sideBarAjuda").classList.add('navbar-select');
    } else {
      document.getElementById("sideBarDash").classList.add('navbar-select');
    }
    document.getElementById(`userNavbar`).innerHTML = localStorage.getItem('user')
  })();
</script>